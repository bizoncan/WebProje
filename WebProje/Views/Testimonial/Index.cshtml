@using varlikKatmani.Concrete
@model List<testimonial>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="row ">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Order Status</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                               
                                <th> # </th>
                                <th> Müşteri İsmi </th>
                                <th> Ünvan </th>
                                <th> Sil </th>
                                <th> Detaylar </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>

                                    <td>
                                        <img src="@item.imageURL" alt="image" />
                                        <span class="pl-2">@item.clientName</span>
                                    </td>
                                    <td> @item.clientName </td>
                                    <td> @item.title </td>
                                    <td> <a href="/Testimonial/DeleteTestimonial/@item.testimonailID" class="btn btn-outline-danger">Sil</a> </td>
                                    <td> <a href="/Testimonial/EditTestimonial/@item.testimonailID" class="btn btn-outline-info">Detaylar</a> </td>
                                   
                                    @* <td>
                                        <div class="badge badge-outline-success">Approved</div>
                                    </td> *@
                                </tr>
                            }
                         

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>