@using varlikKatmani.Concrete
@model List<writerMessage>
@{
    ViewData["Title"] = "RecieverMessageList";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Mesajlar</h4>
            <p class="card-description">

            </p>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>İsim</th>
                            <th>Başlık</th>
                            <th>Tarih</th>
                            <th>Sil</th>
                            <th>Düzenle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {

                            <tr>
                                <td>@item.writerMessageID</td>
                                <td>@item.senderName</td>
                                <td>@item.subject</td>
                                <td>@(((DateTime)item.date).ToString("dd-MMM-yyyy"))</td>
                                <td><a href="/AdminMessage/DeleteAdminMessage/@item.writerMessageID" name="button" value="reciever" class="btn btn-outline-danger">Sil</a></td>
                                <td><a href="/AdminMessage/SeeRecievedMessage/@item.writerMessageID" class="btn btn-outline-success">Gör</a></td>

                            </tr>


                        }

                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>



