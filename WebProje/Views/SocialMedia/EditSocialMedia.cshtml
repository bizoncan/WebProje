@model varlikKatmani.Concrete.socialMedia
@{
    ViewData["Title"] = "EditSocialMedia";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

@using (Html.BeginForm("EditSocialMedia", "SocialMedia", FormMethod.Post))
{

    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Deneyimi Düzenle</h4>
                <p class="card-description">  </p>
                <form class="forms-sample">
                    <div class="form-group">
                        <label>ID</label>
                        <p class="form-control-static">@Model.socialMediaID</p>
                        @Html.HiddenFor(x => x.socialMediaID)
                    </div>
                    <div class="form-group">
                        <label>Name</label>
                        @Html.TextAreaFor(x => x.name, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>URL</label>
                        @Html.TextAreaFor(x => x.url, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Mini İkon Adresi</label>
                        @Html.TextAreaFor(x => x.icon, new { @class = "form-control" })
                    </div>
                 
                    <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                    <button class="btn btn-dark">Cancel</button>
                </form>
            </div>
        </div>
    </div>
}
