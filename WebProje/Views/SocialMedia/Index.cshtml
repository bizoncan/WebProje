@using varlikKatmani.Concrete
@model List<socialMedia>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Sosyal Medya</h4>
            <p class="card-description">

            </p>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Başlık</th>
                            <th>Sil</th>
                            <th>Düzenle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {

                            <tr>
                                <td>@item.socialMediaID</td>
                                <td>@item.name</td>
                                <td><a href="/SocialMedia/DeleteSocialMedia/@item.socialMediaID" class="btn btn-outline-danger">Sil</a></td>
                                <td><a href="/SocialMedia/EditSocialMedia/@item.socialMediaID" class="btn btn-outline-success">Güncelle</a></td>

                            </tr>


                        }

                    </tbody>
                </table>
                <a href="/SocialMedia/AddSocialMedia" class="btn btn-outline-info">Yeni Sosyal Medya Ekle</a>
            </div>
        </div>
    </div>
</div>

