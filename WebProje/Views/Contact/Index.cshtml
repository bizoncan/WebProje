@using varlikKatmani.Concrete
@model List<message>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Mesajlar</h4>
            <p class="card-description">

            </p>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>İsim</th>
                            <th>Tarih</th>
                            <th>Sil</th>
                            <th>Düzenle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {

                            <tr>
                                <td>@item.messageID</td>
                                <td>@item.name</td>
                                <td>@item.date</td>
                                <td><a href="/Contact/DeleteMessage/@item.messageID" class="btn btn-outline-danger">Sil</a></td>
                                <td><a href="/Contact/SeeMessage/@item.messageID" class="btn btn-outline-success">Gör</a></td>

                            </tr>


                        }

                    </tbody>
                </table>
             
            </div>
        </div>
    </div>
</div>

