@using varlikKatmani.Concrete
@model List<writerMessage>
<div class="col-md-6 col-xl-4 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="d-flex flex-row justify-content-between">
                <h4 class="card-title">Mesajlar</h4>
                <p class="text-muted mb-1 small">Hepsini Görüntüle</p>
            </div>
            <div class="preview-list">
                @foreach (var item in Model)
                {

                    <div class="preview-item border-bottom">
                        <div class="preview-thumbnail">
                            @await Component.InvokeAsync("SenderImage", new { email = item.sender })
                        </div>
                        <div class="preview-item-content d-flex flex-grow">
                            <div class="flex-grow">
                                <div class="d-flex d-md-block d-xl-flex justify-content-between">
                                    <h6 class="preview-subject">@item.senderName</h6>
                                    <p class="text-muted text-small">@item.date</p>
                                </div>
                                <p class="text-muted message-content" >@item.subject</p>

                            </div>
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
</div>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        var maxLength = 25; // Maksimum karakter sayısı
        var elements = document.querySelectorAll(".message-content");

        elements.forEach(function (element) {
            var text = element.innerText;

            if (text.length > maxLength) {
                element.innerText = text.substring(0, maxLength) + '...';
            }
        });
    });
</script>