@using varlikKatmani.Concrete
@model List<portfolio>

<div class="row ">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Proje Listesi</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Ana Resim</th>
                                <th> Proje Adı </th>
                                <th> URL </th>
                                <th> Fiyat </th>
                                <th> Tamamlanma Oranı </th>
                                <th> Durum  </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var item in Model){
                            <tr>
                                <td>
                                  @item.portfolioID
                                </td>
                                <td>
                                        <img src="@item.imageURL" alt="Alternate Text" />
                                </td>

                                <td>
                                    
                                     @item.name
                                </td>
                                    <td> @item.projectURL </td>
                                    <td> @item.price</td>
									
                                    <td> @item.value% </td>
                                <td>
                                        <div class="badge badge-outline-success">@item.status</div>
                                </td>
                            </tr>
                            }
                       
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
