@model WebProje.Areas.Writer.Models.UserEditViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Bilgilerini düzenle</h4>
            <p class="card-description">
                Basic form elements
            </p>
            <form class="forms-sample" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="exampleInputName1">İsim</label>
                    <input type="text" class="form-control" asp-for="name" id="exampleInputName1" placeholder="İsim">
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Soyisim</label>
                    <input type="text" class="form-control" asp-for="surname" id="exampleInputName1" placeholder="Soyisim">
                </div>
           
                <div class="form-group">
                    <label for="exampleInputPassword4">Şifre</label>
                    <input type="password" class="form-control" asp-for="password" id="exampleInputPassword4" placeholder="Şifre">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword4">Şifre Tekrar</label>
                    <input type="password" class="form-control" asp-for="confirmPassword" id="exampleInputPassword4" placeholder="Şifre Tekrar">
                </div>
              
                <div class="form-group">
                    <label>Resim Yükle</label>
                    <input type="file" asp-for="image">
                    @* <div class="input-group col-xs-12">
                        <input type="text" class="form-control file-upload-info" disabled placeholder="Resim Yükle">
                        <span class="input-group-append">
                            <button class="file-upload-browse btn btn-primary" type="button">Yükle</button>
                        </span>
                    </div> *@
                </div>
               
              
                <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                <button class="btn btn-light">İptal</button>
            </form>
        </div>
    </div>
</div>
 