@using varlikKatmani.Concrete
@model List<writerMessage>
@{
    ViewData["Title"] = "SenderMessage";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Giden kutusu</h4>
            <p class="card-description">
                Add class <code>.table</code>
            </p>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Konu</th>
                            <th>Gönderilen</th>
                            <th>Gönderilen Mail</th>

                            <th>Tarih</th>
                            <th>Detaylar</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                   
                            <tr>
                                <td>@item.writerMessageID</td>
                                <td>@item.subject</td>
                                <td>@item.recieverName</td>
                                <td>@item.reciever</td>
                                <td>@(((DateTime)item.date).ToString("dd-MMM-yyyy"))</td>
                                @*  <td><label class="@color">@item.status</label>@item.c</td> *@
                                <td><a href="/Writer/Message/MessageDetails/@item.writerMessageID" class="btn btn-primary">Mesajı gör</a></td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
 