@using varlikKatmani.Concrete
@model List<annoucement>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}
@{
    string color = "";
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Duyurular</h4>
           
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Başlık</th>
                            <th>Tarih</th>
                            <th>Tür</th>
                            <th>Detaylar</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            if (item.status == "Yeni yazı") { color = "badge badge-danger"; }
                            if (item.status == "Tatlı köpek videosu") { color = "badge badge-success"; }
                            if (item.status == "Eski Yazı") { color = "badge badge-warning"; }
                            if (item.status == "Zaman yolcusu") { color = "badge badge-info"; }
                            if (item.status == "Ork") { color = "badge badge-primary"; }

                            <tr>
                                <td>@item.annoucementID</td>
                                <td>@item.title</td>
                                <td>@(((DateTime)item.date).ToString("dd-MMM-yyyy"))</td>
                                <td><label class="@color">@item.status</label></td>
                                <td><a href="/Writer/Default/AnnoucementDetails/@item.annoucementID" class="btn btn-primary">Detaylar</a></td>
                            </tr>
                        }
                    
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>